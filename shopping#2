#include <stdio.h>

int main() {
    int n;
    int in[100], sold[100];

    scanf("%d", &n);
    for (int i = 0; i < n; i++) scanf("%d", &in[i]);
    for (int i = 0; i < n; i++) scanf("%d", &sold[i]);

    // 재고 출력
    printf("재고수량 : ");
    for (int i = 0; i < n; i++)
        printf("%d ", in[i] - sold[i]);
    printf("\n");

    // 총 판매량
    int total = 0, total_in=0;
    for (int i = 0; i < n; i++) {
        total += sold[i];
        total_in += in[i];
    }

    double rate = (double)total / total_in * 100.0;
    printf("총 판매량 : %d (판매율 %.2f%%)\n", total, rate);

    // 최대 최소
    int max = 0, min = 0;
    for (int i = 1; i < n; i++) {
        if (sold[i] > sold[max]) max = i;
        if (sold[i] < sold[min]) min = i;
    }

    printf("가장 많이 판매된 상품 : ID %d, 판매량 %d\n", max+1, sold[max]);
    printf("가장 적게 판매된 상품 : ID %d, 판매량 %d\n", min+1, sold[min]);

    // 재고 부족 (2 이하)
    for (int i = 0; i < n; i++) {
        int stock = in[i] - sold[i];
        if (stock <= 2)
            printf("상품 ID %d : 재고부족(%d)\n", i+1, stock);
    }

    return 0;
}
